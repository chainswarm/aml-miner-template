# AML Miner Template - Environment Configuration Template
# Copy this file to .env and adjust values as needed

# ===========================
# Model Paths
# ===========================
ALERT_SCORER_PATH=trained_models/alert_scorer_v1.0.0.txt
ALERT_RANKER_PATH=trained_models/alert_ranker_v1.0.0.txt
CLUSTER_SCORER_PATH=trained_models/cluster_scorer_v1.0.0.txt

# ===========================
# API Settings
# ===========================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=120

# ===========================
# Feature Engineering
# ===========================
MAX_FEATURES=100
FEATURE_SELECTION_METHOD=importance

# ===========================
# Logging Configuration
# ===========================
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# ===========================
# Determinism & Reproducibility
# ===========================
RANDOM_SEED=42

# ===========================
# Performance Settings
# ===========================
BATCH_SIZE=1000
MAX_MEMORY_MB=2048

# ===========================
# Data Paths
# ===========================
DATA_DIR=data
TRAINED_MODELS_DIR=trained_models

# ===========================
# Training Settings
# ===========================
VALIDATION_SPLIT=0.2
TEST_SPLIT=0.1
CV_FOLDS=5
EARLY_STOPPING_ROUNDS=50
MIN_TRAINING_SAMPLES=10000

# ===========================
# S3 Configuration - Risk Scoring Batch Export (Read-Only, Public Access)
# ===========================
RISK_SCORING_S3_ENDPOINT=https://s3.nl-ams.scw.cloud
RISK_SCORING_S3_BUCKET=data-pipeline
RISK_SCORING_S3_REGION=nl-ams